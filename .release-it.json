{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md"
    },
    "./.release-it-plugin.mjs": {}
  },
  "git": {
    "push": true,
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:git:release": [
      "git add --all"
    ]
  }
}