{
  "name": "cdk-skill-management",
  "version": "1.0.40",
  "description": "CDK constructs to manage Alexa Skills",
  "scripts": {
    "setup": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run build:handler && npm run build:lib",
    "build:handler": "esbuild --bundle --minify --external:@aws-sdk/* --format=cjs --platform=node --outfile=dist/src/handlers/ask-custom-resource/index.js src/handlers/ask-custom-resource/index.ts",
    "build:lib": "jsii",
    "test": "jest",
    "test:update": "jest -u",
    "release": "release-it",
    "package": "jsii-pacmak",
    "documentation": "typedoc",
    "commitlint": "commitlint"
  },
  "keywords": [
    "awscdk",
    "aws-cdk",
    "cdk",
    "alexa",
    "skill",
    "aws",
    "ask-smapi",
    "ask",
    "smapi",
    "cdk-skill-management"
  ],
  "author": {
    "name": "t0bst4r",
    "email": "82281152+t0bst4r@users.noreply.github.com",
    "url": "https://github.com/t0bst4r",
    "organization": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t0bst4r/cdk-skill-management.git"
  },
  "license": "MIT",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "peerDependencies": {
    "aws-cdk-lib": "^2.88.0",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.438.0",
    "@aws-sdk/client-ssm": "^3.438.0",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/aws-lambda": "^8.10.125",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "ask-smapi-model": "^1.24.0",
    "ask-smapi-sdk": "^1.3.0",
    "aws-cdk-lib": "2.88.0",
    "constructs": "10.0.0",
    "esbuild": "^0.21.3",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.7",
    "jest": "^29.7.0",
    "jsii": "^5.2.14",
    "jsii-pacmak": "^1.90.0",
    "prettier": "^3.0.3",
    "release-it": "^17.0.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2"
  },
  "stability": "stable",
  "jsii": {
    "versionFormat": "full",
    "excludeTypescript": [
      "**/*.test.ts",
      "dist/**/*"
    ],
    "tsc": {
      "outDir": "./dist/lib",
      "rootDir": "./lib"
    },
    "outdir": "./dist/jsii",
    "targets": {
      "python": {
        "module": "cdk_skill_management",
        "distName": "cdk-skill-management"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
