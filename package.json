{
  "name": "cdk-skill-management",
  "version": "1.0.0",
  "description": "CDK constructs to manage Alexa Skills",
  "keywords": [
    "cdk",
    "alexa",
    "skill",
    "aws"
  ],
  "author": {
    "name": "t0bst4r",
    "email": "82281152+t0bst4r@users.noreply.github.com",
    "url": "https://github.com/t0bst4r",
    "organization": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t0bst4r/cdk-skill-management.git"
  },
  "license": "ISC",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "build": "npm run build:jsii && npm run build:handler",
    "build:jsii": "jsii",
    "build:handler": "esbuild --bundle src/handlers/ask-custom-resource/index.ts --outfile=dist/src/handlers/ask-custom-resource/index.js --minify --format=esm",
    "package": "jsii-pacmak"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.101.0",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/aws-lambda": "^8.10.125",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "ask-smapi-model": "^1.24.0",
    "ask-smapi-sdk": "^1.3.0",
    "esbuild": "^0.19.5",
    "aws-cdk-lib": "2.101.0",
    "constructs": "10.0.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jsii": "^5.2.14",
    "jsii-pacmak": "^1.90.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "stability": "stable",
  "jsii": {
    "versionFormat": "full",
    "excludeTypescript": [
      "**/*.test.ts",
      "dist/**/*"
    ],
    "tsc": {
      "outDir": "./dist/lib",
      "rootDir": "./lib"
    },
    "outdir": "./dist/jsii",
    "targets": {
      "python": {
        "module": "cdk_skill_management",
        "distName": "cdk-skill-management"
      }
    }
  }
}
